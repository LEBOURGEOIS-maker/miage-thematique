{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href={{ asset('css/loginRegister.css') }}>
<link rel="stylesheet" href={{ asset('css/pointage.css') }}>
{% endblock %}
{% block body %}
<div class="container-fluid">
  <div class="row no-gutter">
    <div class="flex-container d-none d-md-flex col-md-4 col-lg-7 bg-color">
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
      </div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
        <div class="num">6</div>
        <div class="num">7</div>
        <div class="num">8</div>
        <div class="num">9</div>
      </div>
      <div class="colon"></div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
      </div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
        <div class="num">6</div>
        <div class="num">7</div>
        <div class="num">8</div>
        <div class="num">9</div>
      </div>
      <div class="colon"></div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
      </div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
        <div class="num">6</div>
        <div class="num">7</div>
        <div class="num">8</div>
        <div class="num">9</div>
      </div>
    </div>
    <div class="col-md-8 col-lg-5">
      <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
        <span class="navbar-brand">C<i class="far fa-hourglass"></i>RONOS</span>
        <!-- Topbar Navbar -->
        <ul class="navbar-nav ml-auto">
          <!-- Nav Item - User Information -->
          <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="mr-2 d-lg-inline text-gray-600 small">{{ prenom }} {{ nom | upper }}</span>
            </a>
            <!-- Dropdown - User Information -->
            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in mt-2" aria-labelledby="userDropdown">
              <a class="dropdown-item  text-primary disabled" href="{{ path('panelEtudiant') }}">
                <i class="fas fa-home fa-sm fa-fw mr-2 text-gray-400"></i>
                Accueil
              </a>
              <a class="dropdown-item" href="{{ path('pointage') }}">
                <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                Badgeuse
              </a>
              <a class="dropdown-item" href="{{ path('pointageWeek') }}">
                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                Récap' pointage
              </a>
              <a class="dropdown-item" href="{{ path('pointageWeek') }}">
                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                Justifier une absence
              </a>
              <a class="dropdown-item" href="{{ path('etudiantListeJustificationsAbs') }}">
                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                Liste de mes justifications
              </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#0" data-toggle="modal" data-target="#logoutModal">
                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                Déconnexion
              </a>
            </div>
          </li>
        </ul>
      </nav>
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-12 col-lg-12 mx-auto custom-fade">
              <section class="pricing">
                <h3 class="login-heading mb-4">Bonjour {{ prenom }},</h3>
                <h4 class="login-heading mb-4">{{ message }}<br><strong>{{ cours }}</strong></h4>
                <div class="container">
                  <div class="row">
                    <div class="col-lg-12">
                      <a href="{{ path('pointage') }}" class="btn btn-block btn-primary text-uppercase">Badgeuse</a>
                    </div>
                    <div class="col-lg-6">
                      <a href="{{ path('pointageWeek') }}" class="btn btn-block btn-primary text-uppercase">Pointage de la semaine</a>
                    </div>
                    <div class="col-lg-6">
                      <a href="{{ path('showPointageTotaux') }}" class="btn btn-block btn-primary text-uppercase">Historique Pointage</a>
                    </div>
                    <div class="col-lg-6">
                      <a href="{{ path('justificationAbsence') }}" class="btn btn-block btn-warning text-uppercase">Justifier une absence</a>
                    </div>
                    <div class="col-lg-6">
                      <a href="{{ path('etudiantListeJustificationsAbs') }}" class="btn btn-block btn-warning text-uppercase">Liste de mes justifications</a>
                    </div>
                    <div class="col-lg-3">
                    </div>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Se déconnecter ?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">Cliquez sur "Déconnexion" ci-dessous si vous êtes prêt à terminer votre session en cours.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
        <a class="btn btn-danger" href="{{ path('logout') }}">Déconnexion</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/clock.js') }}"></script>
    
{% endblock %}
