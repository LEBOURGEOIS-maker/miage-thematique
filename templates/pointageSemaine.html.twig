{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href={{ asset('css/loginRegister.css') }}>
<link rel="stylesheet" href={{ asset('css/recapPointage.css') }}>
{% endblock %}
{% block body %}
<div class="container-fluid">
  <div class="row no-gutter login">
    <div class="flex-container d-none d-md-flex col-md-2 col-lg-1 bg-color">
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
      </div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
        <div class="num">6</div>
        <div class="num">7</div>
        <div class="num">8</div>
        <div class="num">9</div>
      </div>
      <div class="colon"></div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
      </div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
        <div class="num">6</div>
        <div class="num">7</div>
        <div class="num">8</div>
        <div class="num">9</div>
      </div>
      <div class="colon"></div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
      </div>
      <div class="clock-column">
        <div class="num">0</div>
        <div class="num">1</div>
        <div class="num">2</div>
        <div class="num">3</div>
        <div class="num">4</div>
        <div class="num">5</div>
        <div class="num">6</div>
        <div class="num">7</div>
        <div class="num">8</div>
        <div class="num">9</div>
      </div>
    </div>
    <!-- END CLOCK -->

    <!-- START MAIN CONTENT -->
    <div class="col-md-10 col-lg-11">
      <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

          <span class="navbar-brand">C<i class="far fa-hourglass"></i>RONOS</span>

          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">

            <!-- Nav Item - User Information -->
            <li class="nav-item dropdown no-arrow">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="mr-2 d-lg-inline text-gray-600 small">{{ prenom }} {{ nom|upper }}</span>
              </a>
              <!-- Dropdown - User Information -->
              <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in mt-2" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="{{ path('panelEtudiant') }}">
                  <i class="fas fa-home fa-sm fa-fw mr-2 text-gray-400"></i>
                  Accueil
                </a>
                <a class="dropdown-item" href="{{ path('pointage') }}">
                  <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                  Badgeuse
                </a>
                <a class="dropdown-item text-primary disabled" href="{{ path('pointageWeek') }}">
                  <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                  Récap' pointage
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#0" data-toggle="modal" data-target="#logoutModal">
                  <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                  Déconnexion
                </a>
              </div>
            </li>

          </ul>

        </nav>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Content Row -->
          <div class="row justify-content-md-center">

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Temps de travail effectué</div>
                      <div class="h4 mb-0 font-weight-bold text-gray-800">{% if compteurHeureSemaine['heures'] > 0 %}{{compteurHeureSemaine['heures']}}h{% endif %}{{ compteurHeureSemaine['minutes'] }}min{% if compteurHeureSemaine['minutes'] > 1 %}s{% endif %}<span class="h6 text-muted"> /35h</span></div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-hourglass fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Retard accumulé</div>
                      <div class="h4 mb-0 font-weight-bold text-gray-800">
                        {% if compteurRetardSemaine['heures'] == 0 and compteurRetardSemaine['minutes'] == 0 %}
                        Aucun
                        {% elseif compteurRetardSemaine['heures'] > 0 %}
                          {{ compteurRetardSemaine['heures'] }}h{{ compteurRetardSemaine['minutes'] }}min{% if compteurRetardSemaine['minutes'] > 1 %}s{% endif %}
                        {% endif %}
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-hourglass-end  fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Content Row -->

          <div class="row">
            <div class="table">
						  <table id="tableauEtudiant" class="table" style="width:100%">
								<thead>
									<tr>
										<th><b>Date</b></th>
										<th><b>Entrée</b></th>
										<th><b>Sortie</b></th>
                    <th></th>
										<th><b>Cours</b></th>
										<th><b>Présence</b></th>
                    <th><b>Anomalies</b></th>
                    <th><b></b></th>
                    <th></th>
                    <th></th>
                    <th></th>
									</tr>
								</thead>
								<tbody>
									{% for elementListePointage in listeDePointage %}
										<tr>
												<td>{{ elementListePointage.datePointageEntree|date('d/m/Y') }}</td>
												<td>{{ elementListePointage.datePointageEntree|date('H:i') }}</td>
                        {% if elementListePointage.datePointageSortie == NULL %}
												  <td>{{ elementListePointage.datePointageSortie }}</td>
                        {% else %}
                          <td>{{ elementListePointage.datePointageSortie|date('H:i') }}</td>
                        {% endif %}
                        <td><span class="badge badge-info">{{ elementListePointage.plageHoraire }}</span></td>
												<td>{{ elementListePointage.nomUe }}</td>
                        <td>{{ elementListePointage.dureePointage }}</td>
												<td>{{ elementListePointage.retard }}</td>
												<td>
                        {% if elementListePointage.commentaire is null %}
              					{% else %}
              						<i class="far fa-comment-dots fa-lg" data-toggle="tooltip" data-placement="top" title="{{ elementListePointage.commentaire }}"></i>
              					{% endif %}
                        </td>
												<td>{{ elementListePointage.partiEnAvance }}</td>
												<td>{{ elementListePointage.PointeParAdmin }}</td>
										</tr>
									{% endfor %}
								</tbody>
                <tfoot>
		              <th>Date</th>
									<th></th>
									<th></th>
                  <th></th>
									<th>Cours</th>
									<th></th>
                  <th></th>
                  <th></th>
                  <th></th>
                  <th></th>
								</tfoot>
						  </table>
						</div>
            <a href="{{ path('panelEtudiant') }}" class="btn btn-light roundedButton"><i class="fas fa-arrow-circle-left"></i> Retour</a>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

    </div>
    </div>
    <!-- END MAIN CONTENT -->
  </div>
</div>
<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Se déconnecter ?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">Cliquez sur "Déconnexion" ci-dessous si vous êtes prêt à terminer votre session en cours.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
        <a class="btn btn-danger" href="{{ path('logout') }}">Déconnexion</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/clockPointage.js') }}"></script>
    <script src="{{ asset('js/initEtudiant.js') }}"></script>
{% endblock %}
